var Animal = Class({
	move: function(){}
});


function check(Extends,Store) {
		
	var X = Class({
		Extends: Extends,
		Store: Store
	});
	
	eq(typeof X, 'function');
	
	var x = new X;
	
	eq(typeof x.move, 'function');
	eq(x instanceof X, true);
	eq(x instanceof Animal, false);
	
	
	if (Store) {
		eq(typeof x.save, 'function');
	}
}

check(Animal);
check([Animal]);

check(Animal, Class.LocalStore('x'));
check([Animal], Class.LocalStore('x'));

