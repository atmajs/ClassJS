	
UTest({
	
	'test-fetch': function(done){
		
		var Foo = Class({
			Store: Class.Remote('test/dom/data/{number}.json')
		});
		
		var foo = Foo.fetch({number: 1});
		eq(typeof foo.done, 'function');

		
		foo.done(assert.callback(function(){
			
			eq(foo.name, 'A');

			foo.number = 5;			
			foo
				.fetch()
				.fail(assert.callback(function(){
					done();	
				}))
				;
			
		}));
	},
	
	'test-fetch-listeners': function(done){
		
		var Remote = Class.Remote;
		
		Remote.onBefore(assert.callback(function(class_, type){
			eq(type, 'fetch');
		}));
		
		Remote.onAfter(assert.callback(function(class_){
			
			eq(class_.name, 'A');
		}), assert.callback(function(class_){
			
			eq(class_.number, '5');
		}));
		
		this['test-fetch'](done);
	}
	
});
	