
include
	.inject('/src/fn/memoize.js')
	.done(function(){
		
		UTest({
			'momoize': function(){
				
				var calls = 0;
				
				var once = function(){
					
					return function(factor) {
						calls++;
						return 2 * (factor || 0);
					};
				};
				
				
				var fn = fn_memoize(once());
				
				eq(fn(2), 4);
				eq(calls, 1);
				
				eq(fn(2), 4);
				eq(fn(2), 4);
				eq(calls, 1);
				
				eq(fn(3), 6);
				eq(fn(3), 6);
				eq(calls, 2);
				
				eq(fn(3, 4), 6);
				eq(calls, 3);
				
				eq(fn(2), 4);
				eq(calls, 3);
				
				eq(fn(), 0);
				eq(fn(), 0);
				eq(fn(), 0);
				eq(calls, 4);
				
			},
			
			'async': function(done) {
				var calls = 0;
				
				var once = function(){
					
					return function(factor, callback) {
						calls++;
						
						setTimeout(function(){
							callback(2 * (factor || 0));
						}, 100);
					};
				};
				
				
				var fn = fn_memoizeAsync(once());
				
				fn(2, function(res){
					
					eq(res, 4);
					
					fn(2, function(res){
						eq(res, 4);
						eq(calls, 1);
						
						var wait = 2,
							multiple = function(res){
								if (--wait !== 0)
									return;
								
								eq(res, 6);
								eq(calls, 2);
								done();
							};
							
						fn(3, multiple);
						fn(3, multiple);
					});
				});
			}
		})
	});